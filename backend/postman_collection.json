        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "pdf_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "quiz_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Health Check",
            "item": [
                {
                    "name": "Root Endpoint",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "2. Authentication",
            "item": [
                {
                    "name": "Login with Google",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('access_token', response.access_token);",
                                    "    console.log('Access token saved:', response.access_token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"firebase_token\": \"YOUR_FIREBASE_TOKEN_HERE\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/google",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "google"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "3. PDF Management",
            "item": [
                {
                    "name": "Upload PDF",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('pdf_id', response.pdf_id);",
                                    "    console.log('PDF ID saved:', response.pdf_id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": "path/to/your/test.pdf"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/pdf/upload",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pdf",
                                "upload"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get PDF Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/pdf/{{pdf_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pdf",
                                "{{pdf_id}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get All User PDFs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/pdf/user/all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pdf",
                                "user",
                                "all"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete PDF",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/pdf/{{pdf_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "pdf",
                                "{{pdf_id}}"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "4. Quiz Management",
            "item": [
                {
                    "name": "Generate Quiz from PDF",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('quiz_id', response.quiz_id);",
                                    "    console.log('Quiz ID saved:', response.quiz_id);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"num_questions\": 5,\n  \"difficulty\": \"medium\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/quiz/generate/{{pdf_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "quiz",
                                "generate",
                                "{{pdf_id}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Quiz Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/quiz/{{quiz_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "quiz",
                                "{{quiz_id}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Submit Quiz Answers",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"answers\": {\n    \"question_1_id\": \"option_a\",\n    \"question_2_id\": \"option_b\",\n    \"question_3_id\": \"option_c\",\n    \"question_4_id\": \"option_a\",\n    \"question_5_id\": \"option_d\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/quiz/{{quiz_id}}/submit",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "quiz",
                                "{{quiz_id}}",
                                "submit"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Quiz Attempts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/quiz/{{quiz_id}}/attempts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "quiz",
                                "{{quiz_id}}",
                                "attempts"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get All User Quizzes",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/quiz/user/all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "quiz",
                                "user",
                                "all"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
